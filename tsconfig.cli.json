{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node", "cli-progress", "stream-json"]
  },
  "include": [
    "src/cli/**/*",
    "src/parser/**/*",
    "src/analyzer/**/*",
    "src/shared/**/*"
  ]
}
